{% extends 'base.html.twig' %}

{% block content %}
    <!-- top tiles -->
    <div class="row" style="display: inline-block;" >
        <div class="tile_count">
            <div class="col-md-12 col-sm-12  tile_stats_count">
                <span class="count_top"><i class="fa fa-clock-o"></i>  Monitoring status</span>
                <div class="count {% if currentProject.isMonitoringStatusOk %}green{% else %}red{% endif %}">{% if currentProject.isMonitoringStatusOk %}OK{% else %}BROKEN{% endif %}
                    {% if currentProject.isMonitoringStatusOk %}
                        ({{ currentProject.monitoringTasks.count }} / {{ currentProject.monitoringTasks.count }})
                    {% else %}
                        ({{ currentProject.monitoringStatusBadCount }} / {{ currentProject.monitoringTasks.count }})
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <!-- /top tiles -->
    <div class="row">
        <div class="col-md-12">
            {% for tag in currentProject.tagList %}
               <div class="x_panel">
                    <div class="x_title">
                        <h2>{{ tag }}</h2>
                        <div class="clearfix"></div>
                    </div>

                   <div class="x_content row">
                   {% for account in currentProject.accounts %}
                       {% if account.tag == tag %}
                                <div class="col-md-3 col-sm-12 ">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>{{ account.title }}</h2>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <table class="table">
                                                <tbody>
                                                <tr>
                                                    <th scope="row">login</th>
                                                    <td style="word-break: break-all; white-space: pre-line;">{{account.login}}</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">password</th>
                                                    <td style="word-break: break-all; white-space: pre-line">{{account.password}}</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">link</th>
                                                    <td style="word-break: break-all; white-space: pre-line"><a href="{{ account.link }}">{{account.link}}</a></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">extra data</th>
                                                    <td style="word-break: break-all; white-space: pre-line">{{account.extraData|raw}}</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">description</th>
                                                    <td style="word-break: break-all; white-space: pre-line">{{account.description}}</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                   {% endif %}
                {% endfor %}
                   </div>
            </div>
            {% endfor %}
               <div class="x_panel">
                    <div class="x_title">
                        <h2>Another</h2>
                        <div class="clearfix"></div>
                    </div>

                   <div class="x_content row">
                   {% for account in currentProject.accounts %}
                       {% if account.tag is empty  %}
                                <div class="col-md-3 col-sm-12 ">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>{{ account.title }}</h2>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <table class="table">
                                                <tbody>
                                                <tr>
                                                    <th scope="row">login</th>
                                                    <td style="word-break: break-all; white-space: pre-line">{{account.login}}</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">password</th>
                                                    <td style="word-break: break-all; white-space: pre-line">{{account.password}}</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">link</th>
                                                    <td style="word-break: break-all; white-space: pre-line"><a href="{{ account.link }}">{{account.link}}</a></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">extra data</th>
                                                    <td style="word-break: break-all; white-space: pre-line">{{account.extraData}}</td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">description</th>
                                                    <td style="word-break: break-all; white-space: pre-line">{{account.description}}</td>
                                                </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                   {% endif %}
                {% endfor %}
                   </div>
            </div>
        </div>
    </div>
{% endblock %}
